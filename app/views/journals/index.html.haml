- model_class = Journal
%div.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize

%table{:class=>"table table-striped"}
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:story)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @journals.each do |journal|
      %tr
        %td= link_to journal.id, journal_path(journal)
        %td= journal.story
        %td=l journal.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_journal_path(journal), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")),
                      journal_path(journal),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_journal_path, :class => 'btn btn-primary'
